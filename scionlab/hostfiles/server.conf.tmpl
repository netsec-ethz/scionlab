mode server
tls-server

dev tun
port ${ServerPort}
proto udp

# 1. choice: recommended, long term
# 2. choice: compatible with clients with openvpn 2.3 and updated client.conf file
# 3. choice: compatible with older clients
ncp-ciphers AES-256-GCM:AES-256-CBC:BF-CBC

topology subnet
push "topology subnet"
ifconfig ${ServerIP} ${Netmask}
route ${Subnet} ${Netmask}
push "route ${ServerIP}"

client-config-dir ccd
ccd-exclusive

keepalive 10 120
comp-lzo no
push "comp-lzo no"

txqueuelen 100

user nobody
group nogroup
persist-key
persist-tun
status openvpn-status.log
verb 3
mute 20

# certificates and keys
dh   dh.pem  # Note: generated by scionlab-config using `openssl dhparam -out dh.pem 2048`
<ca>
${CACert}</ca>
<cert>
${ServerCert}
</cert>
<key>
${ServerKey}
</key>
